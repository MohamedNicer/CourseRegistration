<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    
    <Dialog
        title="{dialogModel>/title}"
        contentWidth="500px">
        <content>
            <form:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false">
                <form:content>
                    <!-- Student Name (Read-only) -->
                    <Label text="Student"/>
                    <Text text="{dialogModel>/studentName}"/>
                    
                    <!-- Course Name (Read-only) -->
                    <Label text="Course"/>
                    <Text text="{dialogModel>/courseName}"/>
                    
                    <!-- Status (Read-only - auto-updated based on grade) -->
                    <Label text="Status"/>
                    <Text text="{dialogModel>/status}"/>
                    
                    <!-- Grade (Editable) -->
                    <Label text="Grade"/>
                    <Input
                        value="{dialogModel>/grade}"
                        type="Number"
                        placeholder="Enter grade (0-20)"
                        width="100%"/>
                </form:content>
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button text="Save" type="Emphasized" press=".onSaveEnrollment"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCancelDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
